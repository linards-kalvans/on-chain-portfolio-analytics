# Database Configuration
# All database settings use the DB_ prefix

# Database Type (postgresql, sqlite, duckdb)
DB_TYPE=sqlite

# PostgreSQL Settings (only used when DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_analytics
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SCHEMA=public

# SQLite Settings (only used when DB_TYPE=sqlite)
DB_SQLITE_PATH=portfolio_analytics.db

# DuckDB Settings (only used when DB_TYPE=duckdb)
DB_DUCKDB_PATH=portfolio_analytics.duckdb

# SQLAlchemy Configuration
DB_ECHO=false
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=300
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Environment-specific examples:
# 
# Local Development (SQLite):
# DB_TYPE=sqlite
# DB_SQLITE_PATH=dev_portfolio.db
# 
# Local Development (DuckDB):
# DB_TYPE=duckdb
# DB_DUCKDB_PATH=dev_portfolio.duckdb
# 
# Production (PostgreSQL):
# DB_TYPE=postgresql
# DB_HOST=production-db.example.com
# DB_PORT=5432
# DB_NAME=prod_portfolio_analytics
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=30
